
<div class="ui three column centered grid">
    <div class="ui special cards">
      <% trails.forEach(function(trail){ %>
      <div class="card">
        <div class="blurring dimmable image">
          <div class="ui dimmer">
            <div class="content">
              <div class="center">
                <a href="/trails/<%= trail._id %>">
                  <div class="ui inverted button">
                  Details
                  </div>
                </a>
              </div>
            </div>
          </div>
          <img src="<%= trail.image %>">
        </div>
        <div class="content">
          <div class="header">
            <%= trail.name %>
          </div>
          <div class="meta">
            <a>location-ADDIT</a>
          </div>
          <div class="description" id="description">
           <% var str = trail.description;
              if (str != null){
                var shortDescription = str.substring(0, 100) + " ...";
           %>
               <p><%= shortDescription %></p>
           <% } 
           %>
           
          </div>
        </div>
        <div class="extra content">
          <span class="right floated">
            <div class="ui star rating disabled" id="rating" data-rating="<%= trail.rating %>" data-max-rating="5">
            </div>
          </span>
          <span>
            <i class="user icon"></i>
            # of ratings here
          </span>
        </div>
      </div>
     <% }); %>
    </div>
</div>


  
<script type="text/javascript">

// display star ratings disabled
$(document).ready(function(){$(".rating").rating('disable');});

// dim card images
$(document).ready(function(){$('.special.cards .image').dimmer({on: 'hover'});});

</script>


