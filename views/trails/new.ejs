<%- include ("../partials/header") %>


<h1>Add a New Trail!</h1>
<a href="/trails">Go back</a>
<form class="ui fluid form" action="/trails" method="POST">
    
    <div class="field">
        <input type="text" name="trail[name]" placeholder="name">
        <div class="ui pointing label">
            Please enter a value
        </div>
    </div>
    <div class="field">
        <input type="text" name="trail[image]" placeholder="image URL">
        <div class="ui pointing label">
            Please enter a value
        </div>
    </div>
    <div class="field">
        <input type="text" name="trail[description]" placeholder="Description">
        <div class="ui pointing label">
            Please enter a value
        </div>
    </div>
    
    <button>Submit</button>
</form>


